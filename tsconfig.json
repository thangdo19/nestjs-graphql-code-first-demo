{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": { /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
      "@app/*": ["./src/app/*"],
      "@common/*": ["./src/common/*"],
      "@database/*": ["./src/database/*"]
    },
  }
}
